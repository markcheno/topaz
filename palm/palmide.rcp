END


FORM ID frmAbout AT (2 46 156 112)
USABLE
MODAL
SAVEBEHIND
BEGIN
	TITLE "About Topaz"
	BUTTON "OK" ID btnAboutOK AT (60 95 37 12) USABLE LEFTANCHOR FRAME FONT 0
END                           

ALERT ID altDelete
DEFAULTBUTTON 1
CONFIRMATION
BEGIN
	TITLE "Delete Script"
	MESSAGE "Delete current script ?"
	BUTTONS "OK" "Cancel"
END

ALERT ID altRomIncompatible
ERROR
BEGIN
	TITLE "Wrong Version"
	MESSAGE "Incompatible OS Version"
	BUTTONS "OK"
END

ALERT ID altCompileError
DEFAULTBUTTON 0
ERROR
BEGIN
	TITLE "Compile Error"
    MESSAGE "^1 near line ^2"
    BUTTONS "Ok"
END

ALERT ID altRuntimeError
DEFAULTBUTTON 0
ERROR
BEGIN
	TITLE "Runtime Error"
    MESSAGE "^1"
    BUTTONS "Ok"
END

CATEGORIES ID DefaultCategories "Unfiled" "Examples"

