pi = 3.1415
println("Default")
printf("pi (f)     = %f\n",pi)
println

println("right justified")
printf("pi (7.0f)  = %7.0f\n",pi)
printf("pi (7.1f)  = %7.1f\n",pi)
printf("pi (7.2f)  = %7.2f\n",pi)
printf("pi (7.3f)  = %7.3f\n",pi)
printf("pi (7.4f)  = %7.4f\n",pi)
println

println("right justified with negative")
printf("-pi (7.0f)  = %7.0f\n",-pi)
printf("-pi (7.1f)  = %7.1f\n",-pi)
printf("-pi (7.2f)  = %7.2f\n",-pi)
printf("-pi (7.3f)  = %7.3f\n",-pi)
printf("-pi (7.4f)  = %7.4f\n",-pi)
println

println("right justified with plus")
printf("pi (+7.0f) = %+7.0f\n",pi)
printf("pi (+7.1f) = %+7.1f\n",pi)
printf("pi (+7.2f) = %+7.2f\n",pi)
printf("pi (+7.3f) = %+7.3f\n",pi)
printf("pi (+7.4f) = %+7.4f\n",pi)
println

println("left justified")
printf("pi (-7.0f)  = %-7.0f\n",pi)
printf("pi (-7.1f)  = %-7.1f\n",pi)
printf("pi (-7.2f)  = %-7.2f\n",pi)
printf("pi (-7.3f)  = %-7.3f\n",pi)
printf("pi (-7.4f)  = %-7.4f\n",pi)
println

println("left justified with negative")
printf("-pi (-7.0f) = %-7.0f\n",-pi)
printf("-pi (-7.1f) = %-7.1f\n",-pi)
printf("-pi (-7.2f) = %-7.2f\n",-pi)
printf("-pi (-7.3f) = %-7.3f\n",-pi)
printf("-pi (-7.4f) = %-7.4f\n",-pi)
println

println("left justified with plus")
printf("pi (-+7.0f) = %-+7.0f\n",pi)
printf("pi (-+7.1f) = %-+7.1f\n",pi)
printf("pi (-+7.2f) = %-+7.2f\n",pi)
printf("pi (-+7.3f) = %-+7.3f\n",pi)
printf("pi (-+7.4f) = %-+7.4f\n",pi)
